@model ProductDetailVM
@{
    ViewData["Title"] = "Detail";
}

<div class="product-detail bg-gradient-info p-5 w-100 m-4">
    <div class="container mt-5">
        <h1 class="text-success text-center">Product Detail</h1>
        <div class="images mt-3">
            @foreach (var item in Model.Images)
            {
                <img src="~/img/@item.Image" style="@(item.isMain ? "border: 5px solid red;" : "" ); width:150px; height:150px;)" />
            }
        </div>
        <div class="product-info mt-5">
            <h3>Name: @Model.Name</h3>
            <h4>Description: @Model.Description</h4>
            <h4>Price: @Model.Price</h4>
            <h2>Category: @Model.Category</h2>
        </div>
        <a class="btn btn-success" asp-action="Index">Back</a>
    </div>
</div>

